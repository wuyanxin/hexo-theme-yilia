<div id="gitment-ctn"
  style="max-width: 760px;margin: auto;padding: 0 !important;min-height: 0;">
</div> 
<link rel="stylesheet" href="https://o1wu3x9k6.qnssl.com/assets/css/gitment.default.css?v2">
<script src="https://imsun.github.io/gitment/dist/gitment.browser.js"></script>
<script>
var gitment = new Gitment({
  id: "<%= post.title %>",
  owner: '<%=theme.gitment_owner%>',
  repo: '<%=theme.gitment_repo%>',
  oauth: {
    client_id: '<%=theme.gitment_oauth.client_id%>',
    client_secret: '<%=theme.gitment_oauth.client_secret%>',
  },
})
gitment.render('gitment-ctn')
</script>